{
  "name": "dungeontable",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "main.js",
  "author": "Soubi <soubi@dungeontable.com>",
  "description": "A simple, intuitive Virtual Table Top for local tabletop RPG sessions.",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "./build_electron_app.sh",
    "electron:start": "electron ."
  },
  "dependencies": {
    "@turf/turf": "^7.2.0",
    "electron-log": "^5.4.3",
    "file-saver": "^2.0.5",
    "get-port": "^7.1.0",
    "jszip": "^3.10.1",
    "lodash.debounce": "^4.0.8",
    "path-browserify": "^1.0.1",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vue-tsc": "^3.1.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.dungeontable.app",
    "productName": "DungeonTable",
    "files": [
      "dist/**/*",
      "main.js",
      "public/images/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/icon_256x256.png",
      "extraFiles": [
        {
          "from": "dist_backend/backend_server.exe",
          "to": "resources/bin/backend_server.exe"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game",
      "icon": "./public/icon_256x256.png",
      "extraFiles": [
        {
          "from": "dist_backend/backend_server",
          "to": "resources/bin/backend_server"
        }
      ]
    },
    "directories": {
      "output": "dist_electron"
    }
  }
}
